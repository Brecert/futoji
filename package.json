{
  "name": "futoji",
  "version": "0.2.5",
  "description": "a simple open/close text transformer",
  "repository": "https://github.com/Brecert/futoji.git",
  "author": "brecert",
  "license": "MIT",
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "scripts": {
    "build": "pack build",
    "test": "mocha --require ts-node/register test/**/*.spec.ts",
    "preversion": "yarn build && yarn test",
    "postversion": "git add pkg && git push --tags && yarn publish pkg --auto --new-version %npm_package_version% && git push && echo \"Successfully released version %npm_package_version%!\""
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@pika/pack": "^0.3.2",
    "@pika/plugin-build-node": "^0.3.11",
    "@pika/plugin-build-types": "^0.3.11",
    "@pika/plugin-standard-pkg": "^0.3.11",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "mocha": "^6.0.0",
    "ts-node": "^8.0.2",
    "type-fest": "^0.3.0",
    "typescript": "^3.3.3"
  }
}
